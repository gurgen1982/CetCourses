@model IEnumerable<CetCources.Database.CourseFrequency>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>List of Course Frequencies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.FrequencyDescription)*@
            @Resources.GroupRes.FreqLong
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    var inactive = item.Inactive ? "danger text-muted" : "";
    <tr class="@inactive">
        <td>
            @Html.DisplayFor(modelItem => item.FrequencyDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DaysCount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.FreqId }) |
            @Html.ActionLink("Details", "Details", new { id = item.FreqId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.FreqId })
        </td>
    </tr>
}

</table>
