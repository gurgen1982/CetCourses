<script>
    var freqDayCount = [];
    var yearGroups = [];
    @{ var i = 0; }
    @foreach (var s in ViewBag.FreqCourse)
    {
        @( "freqDayCount[" + i++ + "] = " + s.DaysCount+";" )
    }
    @{ i = 0; }
    @foreach (var y in ViewBag.YearGroups)
    {
        var dy = "";
        foreach (var d in y.YearGroupDays)
        {
            dy += d.Day + ",";
        }
         @( "yearGroups[" + i++ + "] = [" + dy + "]; " )
    }
    var isEditMode = true;
</script>

